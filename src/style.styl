@font-face
    font-family "Open Sans"
    src url("fonts/OpenSans.ttf")

@font-face
    font-family "Open Sans"
    src url("fonts/OpenSans-Italic.ttf")
    font-style italic

*
    padding 0
    margin 0

:root
    box-sizing border-box
    font-family "Open Sans", Arial, Helvetica, sans-serif

body
    display flex
    flex-direction column
    width 100vw
    height 100vh
    align-items center

.hidden
    display none !important

.new-task-form
    position absolute
    background-color white
    box-shadow 0 0 20px #8f8f8f
    display flex
    flex-direction column
    padding 20px
    border-radius 8px
    top 100px
    width 300px
    gap 10px
    form
        display flex
        flex-direction column
        gap 4px
        & > *
            padding 4px
            border 1px solid rgb(182, 182, 182)
            border-radius 4px
    .buttons
        display flex
        justify-content end
        gap 12px
        & > button
            border none
            border-radius 8px
            background-color #292929
            color white
            font-size 12px
            font-weight 700
            padding 8px 12px
        .submit-new-task-form
            &.disabled
                background-color #ABABAB
        .cancel
            background-color #f1f1f1
            color rgb(49, 49, 49)
            &:hover
                background-color #E5E5E5

.navbar
    width 100%
    height 45px
    background-color #3D3D3D
    display flex
    justify-content space-between
    align-items center
    .left
        display flex
        gap 5px
        padding 40px
    .right
        padding 40px
    button
        background-color inherit
        border none
        width 32px
        height 32px
        border-radius 4px
        display flex
        justify-content center
        align-items center
        &:hover
            background-color #646464

.bottom
    width 100%
    flex 1
    display flex
    align-items stretch

    .sidebar
        width 200px
        background-color #FAFAFA
        display flex
        flex-direction column
        padding 30px 8px 0 35px
        button
            background-color inherit
            border none
            border-radius 6px
            padding 3px 8px
            display flex
            align-items center
            gap 10px
            width 100%
            &.selected,
            &:hover
                background-color #EEEEEE
            &.projects
                &:hover
                    background-color inherit
        .projects-list
            margin-top 16px
            display flex
            flex-direction column
            &.open
                button
                    svg
                        transform rotate(90deg)
                        transition transform 0.1s ease-in-out
                        -webkit-transition transform 0.1s ease-in-out
                .project-buttons
                    padding-right 8px
                    & > button
                        padding-left 10px
                        height 30px
            &.closed
                button
                    svg
                        transform rotate(0deg)
                        transition transform 0.1s ease-in-out
                        -webkit-transition transform 0.1s ease-in-out
                .project-buttons
                    display none

    .main
        background-color white
        flex 1
        display flex
        flex-direction column
        padding 40px 0 0 50px
        .project-name
            font-size 20px
            margin-bottom 12px
        .tasks
            display flex
            flex-direction column
        hr
            border-top 1px solid #F0F0F0
        .task
            display flex
            justify-content space-between
            padding 8px 20px 8px 0
            .left
                display flex
                align-items center
                gap 10px
            .right
                display flex
                align-items center
                gap 10px
            button
                width 24px
                height 24px
                display flex
                justify-content center
                align-items center
                background-color inherit
                border none
                border-radius 4px

                &.edit-task,
                &.view-task-details
                    display none
            &:hover
                button
                    &.edit-task,
                    &.view-task-details
                        display block
                    
                    &.edit-task:hover,
                    &.view-task-details:hover
                        background-color #EEEEEE